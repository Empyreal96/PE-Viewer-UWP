<Page x:Class="PE_Viewer.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:PE_Viewer"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="DimGray" />
    </Page.Resources>

    <Grid>
        <controls:NavigationView x:Name="MainNav"
                                 Header="PE Viewer"
                                 IsBackButtonVisible="Collapsed"
                                 ItemInvoked="MainNav_OnItemInvoked">
            <controls:NavigationView.MenuItems>
                <controls:NavigationViewItem Content="Main" Tag="BlankPage1" Icon="Home" />
                <controls:NavigationViewItem Content="Imports" Tag="BlankPage2" Icon="Previous" />
                <controls:NavigationViewItem Content="Exports" Tag="BlankPage3" Icon="Next"/>
            </controls:NavigationView.MenuItems>

            <Frame x:Name="ContentFrame">
                
            </Frame> 
        </controls:NavigationView>
    </Grid>
</Page>